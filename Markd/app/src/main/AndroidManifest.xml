<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.schmidthappens.markd">

    <!-- Necessary to perform network access. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Used to get from gallery or take picture -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <!-- Necessary permission to use phone -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- Necessary permission to get list of accounts on the device -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_markd"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash Page -->
        <activity android:name=".account_authentication.SplashPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Page -->
        <activity android:name=".menu_option_activities.MainActivity"/>

        <!-- Plumbing -->
        <activity
            android:name=".menu_option_activities.PlumbingActivity"
            android:value=".MenuOptionActivities.PlumbingActivity"/>
        <!-- Plumbing Sub-Activities -->
        <activity
            android:name=".plumbing_subactivities.PlumbingEditActivity"
            android:parentActivityName=".menu_option_activities.PlumbingActivity"
            android:value=".plumbing_subactivities.PlumbingEditActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".menu_option_activities.PlumbingActivity" />
        </activity>
        <!-- HVAC -->
        <activity
            android:name=".menu_option_activities.HvacActivity"
            android:value=".MenuOptionActivities.HvacActivity"/>
        <!-- Hvac Sub-Activities -->
        <activity
            android:name=".hvac_subactivities.HvacEditActivity"
            android:parentActivityName=".menu_option_activities.HvacActivity"
            android:value=".hvac_subactivities.HvacEditActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".menu_option_activities.HvacActivity" />
        </activity>

        <!-- Electrical -->
        <activity
            android:name=".menu_option_activities.ElectricalActivity"
            android:value=".MenuOptionActivities.ElectricalActivity"/>
        <!-- Electrical Sub-Activities -->
        <activity
            android:name=".menu_option_activities.ViewPanelActivity"
            android:value=".MenuOptionActivities.ViewPanelActivity" />
        <activity
            android:name=".electrical_subactivities.BreakerDetailActivity"
            android:parentActivityName=".menu_option_activities.ViewPanelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".electrical_subactivities.PanelDetailActivity" />
        </activity>
        <activity
            android:name=".electrical_subactivities.PanelDetailActivity"
            android:parentActivityName=".menu_option_activities.ViewPanelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".menu_option_activities.ViewPanelActivity" />
        </activity>

        <!-- Landscaping -->
        <activity
            android:name=".menu_option_activities.LandscapingActivity"
            android:value=".MenuOptionActivities.LandscapingActivity"/>

        <!-- Painting -->
        <activity
            android:name=".menu_option_activities.PaintingActivity"
            android:value=".MenuOptionActivities.PaintingActivity"/>
        <!-- Paint Sub-Activities -->
        <activity
            android:name=".painting_subactivities.PaintEditActivity"
            android:parentActivityName=".menu_option_activities.PaintingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".menu_option_activities.ViewPanelActivity" />
        </activity>
        <activity android:name=".view_initializers.ServiceDetailActivity" />
    </application>

</manifest>