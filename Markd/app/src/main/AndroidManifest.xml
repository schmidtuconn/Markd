<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.schmidthappens.markd">

    <!-- Necessary to perform network access. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Used to get from gallery or take picture -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <!--Necessary permission to use phone-->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_markd"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Main -->
        <activity
            android:name=".menu_option_activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Plumbing -->
        <activity android:name=".menu_option_activities.PlumbingActivity"
            android:value=".MenuOptionActivities.PlumbingActivity">
        </activity>
            <!-- Plumbing Sub-Activities -->
            <activity android:name=".plumbing_subactivities.PlumbingEditActivity"
                android:value=".plumbing_subactivities.PlumbingEditActivity"
                android:parentActivityName=".menu_option_activities.PlumbingActivity">
                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".menu_option_activities.PlumbingActivity" />
            </activity>
        <!-- HVAC -->
        <activity android:name=".menu_option_activities.HvacActivity"
            android:value=".MenuOptionActivities.HvacActivity">
        </activity>
            <!-- Hvac Sub-Activities -->
            <activity android:name=".hvac_subactivities.HvacEditActivity"
                android:value=".hvac_subactivities.HvacEditActivity"
                android:parentActivityName=".menu_option_activities.HvacActivity">
                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".menu_option_activities.HvacActivity" />
            </activity>

        <!-- Electrical -->
        <activity android:name=".menu_option_activities.ElectricalActivity"
            android:value=".MenuOptionActivities.ElectricalActivity">
        </activity>
            <!-- Electrical Sub-Activities -->
            <activity android:name=".menu_option_activities.ViewPanelActivity"
                android:value=".MenuOptionActivities.ViewPanelActivity"/>
            <activity
                android:name=".electrical_subactivities.BreakerDetailActivity"
                android:parentActivityName=".menu_option_activities.ViewPanelActivity">
                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".electrical_subactivities.PanelDetailActivity" />
            </activity>
            <activity
                android:name=".electrical_subactivities.PanelDetailActivity"
                android:parentActivityName=".menu_option_activities.ViewPanelActivity">
                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".menu_option_activities.ViewPanelActivity" />
            </activity>

        <!-- Landscaping -->
        <activity android:name=".menu_option_activities.LandscapingActivity"
            android:value=".MenuOptionActivities.LandscapingActivity">
        </activity>

        <!-- Painting -->
        <activity android:name=".menu_option_activities.PaintingActivity"
            android:value=".MenuOptionActivities.PaintingActivity">
        </activity>

    </application>
</manifest>