<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <!-- Edit Contractor Description -->
        <EditText
            android:id="@+id/service_edit_contractor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edit_text"
            android:layout_marginTop="15dp"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:hint="Contractor"/>

        <!-- Edit Service Description -->
        <EditText
            android:id="@+id/service_edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_edit_text"
            android:gravity="top|start"
            android:inputType="textCapSentences|textMultiLine"
            android:scrollHorizontally="false"
            android:lines="8"
            android:maxLines="8"
            android:hint="Description of Services"/>

        <!-- Files List -->
        <FrameLayout
            android:id="@+id/service_file_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1">
            <!-- Delete Button -->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/service_edit_delete_button"
                android:layout_height="wrap_content"
                android:layout_width="130dp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/delete"
                android:text="Delete"/>
            <!-- Save Button -->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/service_edit_save_button"
                android:layout_height="wrap_content"
                android:layout_width="130dp"
                android:layout_marginStart="30dp"
                android:text="Save"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>