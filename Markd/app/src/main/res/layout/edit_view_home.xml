<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_texture">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Edit Street -->
            <EditText
                android:id="@+id/home_edit_address_street"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="20sp"
                android:imeOptions="actionNext"
                android:hint="Street Address"/>
            <!-- Edit City -->
            <EditText
                android:id="@+id/home_edit_address_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="20sp"
                android:imeOptions="actionNext"
                android:hint="City"/>
            <!-- Edit State/Zip Code -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <!-- Edit State -->
                <NumberPicker
                    android:id="@+id/home_edit_state"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>
                <!-- Edit Zip Code -->
                <EditText
                    android:id="@+id/home_edit_address_zip_code"
                    android:layout_marginStart="175dp"
                    android:layout_marginLeft="175dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:inputType="numberSigned"
                    android:gravity="center_horizontal"
                    android:maxLength="5"
                    android:imeOptions="actionNext"
                    android:hint="Zip Code"/>
            </RelativeLayout>
            <!-- Bedrooms Title -->
            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bedrooms"/>
            <!-- Number of Bedrooms -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <SeekBar
                    android:id="@+id/home_edit_bedroom_seekbar"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:max="40"/>
                <EditText
                    android:id="@+id/home_edit_bedroom_number"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:maxLength="4"
                    android:inputType="numberDecimal"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <!-- Bathrooms Title -->
            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bathrooms"/>
            <!-- Number of Bathrooms -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <SeekBar
                    android:id="@+id/home_edit_bathroom_seekbar"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:max="40"/>
                <EditText
                    android:id="@+id/home_edit_bathroom_number"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:maxLength="4"
                    android:inputType="numberDecimal"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <!-- Square Footage Title -->
            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Square Footage"/>
            <!-- Number of Bathrooms -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <SeekBar
                    android:id="@+id/home_edit_square_footage_seekbar"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:max="800"/>
                <EditText
                    android:id="@+id/home_edit_square_footage_number"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:maxLength="6"
                    android:inputType="number"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <!-- Save Button -->
            <Button
                android:id="@+id/home_edit_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_gravity="center"
                android:text="Save"/>
        </LinearLayout>
    </ScrollView>
    <!-- Navigation Drawer-->
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimary"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp"
        android:paddingTop="@dimen/activity_vertical_margin" />
</android.support.v4.widget.DrawerLayout>