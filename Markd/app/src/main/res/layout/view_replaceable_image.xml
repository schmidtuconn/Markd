<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/replaceable_image_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/image_capture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPanel">
        <ImageView
            android:id="@+id/replaceable_image_placeholder"
            android:layout_width="@dimen/square_icon"
            android:layout_height="@dimen/square_icon"
            android:layout_gravity="center"
            android:background="@drawable/ic_action_camera"
            android:adjustViewBounds="true"/>
        <ImageView
            android:id="@+id/replaceable_image"
            android:layout_width="300dp"
            android:layout_height="400dp" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_pdf_file_button"
        android:layout_height="wrap_content"
        android:layout_width="130dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:text="View Pdf"/>
</FrameLayout>