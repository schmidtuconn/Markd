<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/paint_list_row_delete_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="@color/delete"
        android:clickable="false"
        android:src="@drawable/ic_action_delete_icon" />

    <!-- Main Row -->
    <LinearLayout
        android:id="@+id/paint_list_row_information"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLabel"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Paint Location -->
            <TextView
                android:id="@+id/paint_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_weight="3"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <!-- Paint Date -->
            <TextView
                android:id="@+id/paint_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black" />
        </LinearLayout>



        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Paint Brand -->
            <TextView
                android:id="@+id/paint_brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:height="16sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black" />

            <!-- Paint Color -->
            <TextView
                android:id="@+id/paint_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>